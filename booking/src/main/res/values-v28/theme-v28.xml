<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedTextFieldCorner" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <item name="boxCollapsedPaddingTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/text_field_color</item>
        <item name="strokeWidth">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/text_field_color</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="hintTextColor">@color/text_gray</item>
        <item name="hintTextAppearance">@style/roundedTextFieldHintAppearance</item>

        <item name="android:textAppearance">@style/roundedTextFieldAppearance</item>
    </style>

    <style name="roundedTextFieldAppearance" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_input</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">17.6sp</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:letterSpacing">0.75</item>
    </style>

    <style name="roundedTextFieldHintAppearance" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">14.4sp</item>
        <item name="fontFamily">@font/button_font</item>
    </style>

    <style name="roundedButtonCorner" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/button_color_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="MiniText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>


</resources>