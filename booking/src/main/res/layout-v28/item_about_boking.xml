<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/departure"
                android:text="@string/departure_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/departureText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/arrivalCountry"
                android:text="@string/country_departure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/arrivalCountryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dates"
                android:text="@string/dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/datesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/numberOfNights"
                android:text="@string/nights_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/numberOfNightsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/hotelBooking"
                android:text="@string/hotel_booking_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/hotelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/roomBooking"
                android:text="Номер"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/roomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/nutrition"
                android:text="@string/foods_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:layout_weight="1"
                android:textColor="#828796"
                android:layout_columnWeight="1"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/nutritionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/button_font"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:lineHeight="19.2sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>