<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedButtonCorner" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/button_color_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="roundedButtonCornerCheckNumber" parent="Widget.MaterialComponents.Button.Icon">

        <item name="backgroundTint">@color/button_color_check_room</item>
        <item name="android:textColor">@color/button_check_room_text</item>
        <item name="cornerRadius">5dp</item>
        <item name="fontFamily">@font/button_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="icon">@drawable/detailnumber</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/button_check_room_text</item>

    </style>

    <style name="chipStyle" parent="Widget.Material3.Chip.Assist.Elevated">

        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipBackgroundColor">@color/chip_color_style</item>
        <item name="android:checkable">false</item>
        <item name="chipStartPadding">4dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="closeIconStartPadding">0dp</item>
        <item name="closeIconEndPadding">4dp</item>
        <item name="chipEndPadding">4dp</item>

    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/button_font</item>
        <item name="android:fontFamily">@font/button_font</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="chipGroup" parent="Widget.Material3.ChipGroup">
        <item name="chipMinTouchTargetSize">1dp</item>
        <item name="chipSpacingVertical">1dp</item>
    </style>
</resources>